@using ProyectoWeb.Models.product_measure
@model ProductMeasureCreateModel

<div class="card col-lg-8">
    <div class="card-header">
        <h2>Nueva Medida Producto</h2>
    </div>
    
    <div class="card-body">
        <form asp-controller="ProductMeasure" asp-action="Create" method="post">
            <label class="form-label">Nombre Medida</label>
            <input class="form-control" type="text" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>
            <div class="mt-3" style="float:right;">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a class="btn btn-danger" asp-controller="ProductMeasure" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>