@using ProyectoWeb.Models.product_measure
@model List<ProductMeasureModel>

<div class="container">
<h1>Medidas Producto</h1>
    
<div class="mt-2">
    <a class="btn btn-outline-success" asp-controller="ProductMeasure" asp-action="Create">
        <i class="bi bi-plus-circle"></i> &nbsp;Agregar Medida
     </a>
</div>
<div class="bg-light mt-5 mx-2">
    <table class="table table-bordered table-striped">
        <thead class="bg-dark text-light">
            <tr>
                <th>Id</th>
                <th>Categoria</th>
                <th class="col-lg-2">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>                    
                        <td>@item.Name</td> 
                        <td>
                            <a class="btn btn-outline-primary" asp-controller="ProductMeasure" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="bi bi-pencil-square w-10"></i>
                            </a>
                            <a class="btn btn-outline-danger mx-2" asp-controller="ProductMeasure" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="bi bi-trash3-fill"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
</div>
