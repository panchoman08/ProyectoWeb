@model List<ProductModel>


<div class="">
    <div>
        <div>
            <h1>Productos</h1>
        </div>
        <div style="float:left;">
            <a class="btn btn-outline-success" asp-controller="Product" asp-action="Create">
                <i class="bi bi-plus-circle"></i> &nbsp;Agregar Producto
            </a>
        </div>

    </div>
    <br/>
    <div class="bg-light mt-5 mx-2">
        <table class="table table-bordered table-striped" style="overflow-x:auto; border-collapse:collapse;">
            <thead class="bg-dark text-light">
                <tr>
                    <th>Código</th>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th>Precio</th>
                    <th>Estado</th>
                    <th>Acciones</th>

                </tr>
            </thead>
            <tbody>

                @foreach (var product in Model)
                {
                    var isContinued = product.StatusId == 1 ? "selected" : "";
                    <tr class="">
                        <td>@Html.DisplayFor(x => product.Sku)</td>
                        <td>@Html.DisplayFor(x => product.Name)</td>
                        <td>@Html.DisplayFor(x => product.Description)</td>
                        <td>@Html.DisplayFor(x => product.BuyPrice)</td>
                        <td>
                            <select>
                                <option value="1" selected=isContinued>Alta</option>
                                <option value="2" >Baja</option>
                            </select>
                        </td>
                        <td>
                                <a class="btn btn-outline-primary" asp-controller="Product" asp-action="Update" asp-route-id="@product.Id">
                                    <i class="bi bi-pencil-square w-10"></i>
                                </a>
                                <a class="btn btn-outline-danger mx-2" asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id">
                                    <i class="bi bi-trash3-fill"></i>
                                </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
       
    </div>
    


</div>
